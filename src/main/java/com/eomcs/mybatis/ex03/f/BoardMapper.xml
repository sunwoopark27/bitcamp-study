<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardMapper">
  
  <resultMap type="Board" id="BoardMap">
    <id column="board_id" property="no"/> 
    <result column="contents" property="content"/>
    <result column="created_date" property="registeredDate"/>
    <result column="view_count" property="viewCount"/>
  </resultMap>
  
  <select id="selectBoard1" resultMap="BoardMap" parameterType = "String">
    select 
      board_id,
      title,
      contents,
      created_date, 
      view_count
    from x_board
    order by board_id #{sortType}
  </select>
  
  <select id="selectBoard2" resultMap="BoardMap" parameterType = "String">
    select 
      board_id,
      title,
      contents,
      created_date, 
      view_count
    from x_board
    order by board_id ${sortType}
  </select>
  
  <select id="selectBoard3" resultMap="BoardMap" parameterType = "String">
    select 
      board_id,
      title,
      contents,
      created_date, 
      view_count
    from x_board
    order by ${sort}
  </select>
  
  <select id="countRecords" resultType="int" parameterType = "string">
    select
      count(*)
    from ${tableName}
  </select>
  
</mapper>







